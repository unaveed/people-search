@model IEnumerable<PeopleSearch.Models.Person>


@if (!Model.Any())
{
    <p>No matches for people by that name.</p>
}
else
{
    foreach (var item in Model)
    {

    <div class="container" style="border:1px solid #B5B5B5; background-color:#fff; padding:10px; margin: 25px; border-radius: 10px">
        <div style="text-align:center">
            <img class="image-circle" src="../Images/@Html.DisplayFor(modelItem => item.Picture)"/>
         </div>
         <div>
            <p class="tb-title">
                @Html.DisplayFor(modelItem => item.FirstName)
                @Html.DisplayFor(modelItem => item.LastName)
            </p>
         </div>
        <div>
            <p class="tb-subtitle">
                <label>Age - </label>
                @{ 
                    var age = DateTime.UtcNow.Year - item.DOB.Year;
                    @Html.DisplayFor(modelItem => age)
                }
            </p>
            <p class="tb-subtitle">
                <label>Address - </label>
                @Html.DisplayFor(modelItem => item.Addr.StreetAddress)<br/>
               @Html.DisplayFor(modelItem => item.Addr.City),
            @Html.DisplayFor(modelItem => item.Addr.State)
            @Html.DisplayFor(modelItem => item.Addr.Zip)
            </p>
            <p class="tb-subtitle">
                <label>Interests - </label>
                @Html.DisplayFor(modelItem => item.Interests)
            </p>
            <div style="text-align:center">
                @Html.ActionLink("Edit", "Edit", new { id = item.PersonId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PersonId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PersonId }) 
            </div>
        </div>
    </div>
  }
}
